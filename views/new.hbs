<div class="mainContainer">
  <small id="asterOne">*</small>
  <small>必填欄位</small>
  <h6 class="addTitle">請輸入你的支出</h6>
  <form action="" method="post" class="mt-3">
    <div class="row mb-3 form-group-one">
      <small id="asterTwo">*</small>
      <label for="nameInput" class="col-sm-2 col-form-label" id="nameAdd">名稱 :</label>
      <input type="name" class="form-control" id="nameInput" name="nameInput" required>
    </div>
    <div class="row mb-3 form-group-two">
      <small id="asterThree">*</small>
      <label for="dateInput" class="col-sm-2 col-form-label" id="dateAdd">日期 :</label>
      <input type="date" class="form-control" id="dateInput" name="dateInput" required>
    </div>
    <div class="row mb-3 form-group-three">
      <small id="asterFour">*</small>
      <label for="categoryInput" class="col-sm-2 col-form-label" id="categoryAdd">類別 :</label>
      <input list="categoryOption" class="form-control" id="categoryInput" name="categoryInput" class="col-sm-10"
        required>
      <datalist id="categoryOption">
        <option>類別</option>
        <option>家居物業</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>餐飲食品</option>
        <option>其他</option>
      </datalist>
    </div>
    <div class="row mb-3 form-group-four">
      <small id="asterFive">*</small>
      <label for="amountInput" class="col-sm-2 col-form-label" id="amountAdd">金額 :</label>
      <input type="number" class="form-control" id="amountInput" name="amountInput" required>
    </div>
    <button type="submit" class="btn btn-outline-dark" id="addButton">新增支出</button>
  </form>
</div>