<div class="mainContainer">
  <small id="asterOne">*</small>
  <small>必填欄位</small>
  <h6 class="addTitle">請輸入你的支出</h6>
  <form action="" method="post" class="mt-3">
    <div class="row mb-3">
      <small id="asterTwo">*</small>
      <label for="nameInput" class="col-sm-2 col-form-label" id="nameAdd">名稱 :</label>
      <div class="col-sm-10">
        <input type="name" class="form-control" id="nameInput" required>
      </div>
      <div class="row mb-3">
        <small id="asterThree">*</small>
        <label for="dateInput" class="col-sm-2 col-form-label" id="dateAdd">日期 :</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="dateInput" required>
        </div>
      </div>
      <div class="row mb-3">
        <small id="asterFour">*</small>
        <label for="categoryInput" class="col-sm-2 col-form-label" id="categoryAdd">類別 :</label>
        <div class="col-sm-10">
          <select class="form-select" id="categoryInput" aria-label="" required>
            <option>類別</option>
            <option>家居物業</option>
            <option>交通出行</option>
            <option>休閒娛樂</option>
            <option>餐飲食品</option>
            <option>其他</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <small id="asterFive">*</small>
        <label for="amountInput" class="col-sm-2 col-form-label" id="amountAdd">金額 :</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="amountInput" required>
        </div>
      </div>
      <button type="submit" class="btn btn-outline-dark" id="submitButton">新增支出</button>
  </form>
</div>