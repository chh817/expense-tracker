<div class="mainContainer">
  <small id="asterOne">*</small>
  <small>必填欄位</small>
  <h6>請輸入你的支出</h6>
  <form action="" method="post" class="mt-3">
    <div class="row mb-3">
      <small id="asterTwo">*</small>
      <label for="nameInput" class="col-sm-2 col-form-label">名稱 :</label>
      <div class="col-sm-10">
        <input type="name" class="form-control" id="nameInput" value="" required>
      </div>
      <div class="row mb-3">
        <small id="asterThree">*</small>
        <label for="dateInput" class="col-sm-2 col-form-label">日期 :</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="dateInput" value="" required>
        </div>
      </div>
      <div class="row mb-3">
        <small id="asterFour">*</small>
        <label for="categoryInput" class="col-sm-2 col-form-label">類別 :</label>
        <div class="col-sm-10">
          <select class="form-select" id="categoryInput" aria-label="">
            <option selected>Select</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
      </div>
      <div class="row mb-3">
        <small id="asterFive">*</small>
        <label for="amountInput" class="col-sm-2 col-form-label">金額 :</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="amountInput" value="" required>
        </div>
      </div>
      <button type="submit" class="btn btn-outline-dark">新增支出</button>
  </form>
</div>