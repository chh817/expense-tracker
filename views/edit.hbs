<div class="mainContainer">
  <small id="asterOne">*</small>
  <small>必填欄位</small>
  <h6 class="editTitle">請修改你的支出</h6>
  <form action="/records/{{record._id}}?_method=put" method="post" class="mt-3">
    <div class="row mb-3 form-groupOne">
      <small id="asterTwo">*</small>
      <label for="inputName" class="col-sm-2 col-form-label" id="nameEdit">名稱 :</label>
      <input type="name" class="form-control" id="inputName" name="inputName" value="{{record.name}}" required>
    </div>
    <div class="row mb-3 form-groupTwo">
      <small id="asterThree">*</small>
      <label for="InputDate" class="col-sm-2 col-form-label" id="dateEdit">日期 :</label>
      <input type="date" class="form-control" id="inputDate" name="inputDate" value="{{record.date}}" required>
    </div>
    <div class="row mb-3 form-groupThree">
      <small id="asterFour">*</small>
      <label for="inputCategory" class="col-sm-2 col-form-label" id="categoryEdit">類別 :</label>
      <input list="categoryOption" class="form-control" id="inputCategory" name="inputCategory"
        value="{{record.category}}" required />
      <datalist id="categoryOption">
        <option>家居物業</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>餐飲食品</option>
        <option>其他</option>
      </datalist>
    </div>
    <div class="row mb-3 form-groupFour">
      <small id="asterFive">*</small>
      <label for="inputAmount" class="col-sm-2 col-form-label" id="amountEdit">金額 :</label>
      <input type="number" class="form-control" id="inputAmount" name="inputAmount" value="{{record.amount}}" required>
    </div>
    <button type="submit" class="btn btn-outline-dark" id="editButton">送出</button>
  </form>
</div>